{
  "permissions": {
    "allow": [
      "Read(*)",
      "Glob(*)",
      "Grep(*)",
      "Task(lab-tech-red)",
      "Task(lab-tech-blue)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:en.wikipedia.org)",
      "WebFetch(domain:stackoverflow.com)",
      "WebFetch(domain:cppreference.com)",
      "WebFetch(domain:docs.wxwidgets.org)",
      "Bash(ls:*)",
      "Bash(pwd:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(mkdir:*)",
      "Bash(date:*)",
      "Bash(echo:*)",
      "Bash(test:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git status:*)",
      "Bash(git show:*)",
      "Write(.claude/cache/**)"
    ],
    "deny": [],
    "ask": [
      "*"
    ]
  },
  "includeCoAuthoredBy": false,
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "AskUserQuestion",
        "hooks": [
          {
            "type": "command",
            "command": "/sa_shared/software/push_cut.sh \"Claude Code\" \"Claude needs your input!\""
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/sa_shared/software/push_cut.sh \"Claude Code waiting\" \"Claude needs your input\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/sa_shared/software/push_cut.sh \"Claude Code Finished\" \"Claude has completed your task\""
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/scripts/validate_skills_loaded.py"
          }
        ]
      }
    ]
  }
}