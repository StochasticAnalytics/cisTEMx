name: cisTEMx GPU release, no FastFFT

on:
  workflow_run:
    workflows: ["Check C++ Formatting"]
    types:
      - completed

jobs:
  run_build:
    if: ${{ github.event.workflow_run.conclusion == 'success' }}
    uses: ./.github/workflows/run_builds.yml
    with:
      build_type: "GPU_release_no_FastFFT"
      configure_options: "--with-cuda "
      global_configure_options: "  --disable-FastFFT --enable-openmp --enable-experimental --enable-staticmode --with-wx-config=/opt/WX/wx305-clang-static-gtk2/bin/wx-config --disable-multiple-global-refinements  "
      runs_on_os: cpu_2core_runner
      CC: clang
      CXX: clang++
      cppstandard: 17
      run_tests: 'cpu'
      n_threads: 2
