name: Validate Synchronization

on:
  push:
    branches:
      - '**'
  pull_request:
  workflow_dispatch:

jobs:
  validate-sync:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.x'

      - name: Run sync validation
        run: python3 .github/scripts/validate_sync.py

      - name: Summary
        if: success()
        run: |
          echo "### Synchronization validation passed ✓" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "All hardcoded values are in sync with their source of truth." >> $GITHUB_STEP_SUMMARY

      - name: Failure summary
        if: failure()
        run: |
          echo "### Synchronization validation failed ✗" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "One or more hardcoded values are out of sync." >> $GITHUB_STEP_SUMMARY
          echo "Check the workflow logs for details." >> $GITHUB_STEP_SUMMARY
