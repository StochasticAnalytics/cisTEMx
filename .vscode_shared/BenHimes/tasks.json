{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "env": {
            "cuda_dir": "/usr/local/cuda",
            "wx_dir_dynamic": "/opt/WX/intel/bin/wx-config",
            "wx_dir_static": "/opt/WX/intel-static/bin/wx-config",
            "wx_dir_dynamic_gcc:": "/opt/WX/gcc/bin/wx-config",
            "build_dir": "${workspaceFolder}/build",
            "compile_cores": "24"
        }
    },
    "tasks": [
        {
            "label": "CONFIG intel,debug",
            "type": "shell",
            "command": "mkdir -p ${build_dir}/intel-debug && cd ${build_dir}/intel-debug && CC=icc CXX=icpc ../../configure --disable-multiple-global-refinements --enable-debugmode  --enable-samples --enable-experimental --enable-openmp"
        },
        {
            "label": "BUILD intel,debug",
            "type": "shell",
            "command": "cd ${build_dir}/intel-debug && make -j${compile_cores}"
        },
        {
            "label": "CONFIG intel",
            "type": "shell",
            "command": "mkdir -p ${build_dir}/intel && cd ${build_dir}/intel && CC=icc CXX=icpc ../../configure --disable-multiple-global-refinements  --enable-experimental --enable-samples  --enable-openmp"
        },
        {
            "label": "BUILD intel",
            "type": "shell",
            "command": "cd ${build_dir}/intel && make -j${compile_cores}"
        },
        {
            "label": "CONFIG intel,profile",
            "type": "shell",
            "command": "mkdir -p ${build_dir}/intel-profile && cd ${build_dir}/intel-profile && CC=icc CXX=icpc ../../configure  --enable-profiling --disable-multiple-global-refinements  --enable-experimental --enable-samples  --enable-openmp"
        },
        {
            "label": "BUILD intel,profile",
            "type": "shell",
            "command": "cd ${build_dir}/intel-profile && make -j${compile_cores}"
        }
        {
            "label": "CONFIG intel,gpu,debug,profile",
            "type": "shell",
            "command": "mkdir -p ${build_dir}/intel-gpu-debug-profile && cd ${build_dir}/intel-gpu-debug-profile && CC=icc CXX=icpc ../../configure --enable-profiling --disable-multiple-global-refinements --enable-gpu-debug --enable-debugmode --with-cuda=${cuda_dir} --enable-samples --enable-experimental --enable-openmp"
        },
        {
            "label": "BUILD intel,gpu,debug,profile",
            "type": "shell",
            "command": "cd ${build_dir}/intel-gpu-debug-profile && make -j${compile_cores}"
        },
        {
            "label": "CONFIG intel,gpu,debug,deterministic,profile",
            "type": "shell",
            "command": "mkdir -p ${build_dir}/intel-gpu-debug-deterministic-profile && cd ${build_dir}/intel-gpu-debug-deterministic-profile && CC=icc CXX=icpc ../../configure --enable-deterministic-outcome --enable-profiling --disable-multiple-global-refinements --enable-gpu-debug --enable-debugmode --with-cuda=${cuda_dir} --enable-samples --enable-experimental --enable-openmp"
        },
        {
            "label": "BUILD intel,gpu,debug,deterministic,profile",
            "type": "shell",
            "command": "cd ${build_dir}/intel-gpu-debug-deterministic-profile && make -j${compile_cores}"
        },
        {
            "label": "CONFIG intel,gpu,profile",
            "type": "shell",
            "command": "mkdir -p ${build_dir}/intel-gpu-profile && cd ${build_dir}/intel-gpu-profile && CC=icc CXX=icpc ../../configure --enable-profiling --disable-multiple-global-refinements --with-cuda=${cuda_dir} --enable-samples --enable-experimental --enable-openmp"
        },
        {
            "label": "BUILD intel,gpu,profile",
            "type": "shell",
            "command": "cd ${build_dir}/intel-gpu-profile && make -j${compile_cores}"
        },
        {
            "label": "CONFIG intel,gpu,debug",
            "type": "shell",
            "command": "mkdir -p ${build_dir}/intel-gpu-debug && cd ${build_dir}/intel-gpu-debug && CC=icc CXX=icpc ../../configure --disable-multiple-global-refinements --enable-gpu-debug --enable-debugmode  --with-cuda=${cuda_dir} --enable-samples --enable-experimental --enable-openmp"
        },
        {
            "label": "BUILD intel,gpu,debug",
            "type": "shell",
            "command": "cd ${build_dir}/intel-gpu-debug && make -j${compile_cores}"
        },
        {
            "label": "CONFIG intel,gpu",
            "type": "shell",
            "command": "mkdir -p ${build_dir}/intel-gpu && cd ${build_dir}/intel-gpu && CC=icc CXX=icpc ../../configure --disable-multiple-global-refinements  --with-cuda=${cuda_dir} --enable-experimental --enable-samples  --enable-openmp"
        },
        {
            "label": "BUILD intel,gpu",
            "type": "shell",
            "command": "cd ${build_dir}/intel-gpu && make -j${compile_cores}"
        },
        {
            "label": "CONFIG GNU ,gpu",
            "type": "shell",
            "command": "mkdir -p ${build_dir}/GNU-gpu && cd ${build_dir}/GNU-gpu && CC=gcc CXX=g++ ../../configure ----disable-multiple-global-refinements --with-c++std=20 --enable-samples --enable-experimental --with-cuda=${cuda_dir} --disable-staticmode --enable-openmp --with-wx-config=${wx_dir_dynamic_gcc}"
        },
        {
            "label": "BUILD GNU,gpu",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/cistem_make.sh 20 ${build_dir}/GNU-gpu ${compile_cores}"
        },
        {
            "label": "CONFIG GNU,gpu, debug",
            "type": "shell",
            "command": "mkdir -p ${build_dir}/GNU-gpu-debug && cd ${build_dir}/GNU-gpu-debug && CC=gcc CXX=g++ ../../configure --disable-multiple-global-refinements --with-c++std=20 --enable-samples --enable-debugmode --enable-experimental --with-cuda=/usr/local/cuda --disable-staticmode --enable-openmp --with-wx-config=${wx_dir_dynamic_gcc}"
        },
        {
            "label": "BUILD GNU,gpu, debug",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/cistem_make.sh 20 ${build_dir}/GNU-gpu-debug ${compile_cores}"
        },
        {
            // This doesn't work - spaces, ugh
            "label": "Build dev container",
            "type": "shell",
            "command": "~/.config/devcontainer build --image-name bhimesbhimes/cistem_build_env .devcontainer_build/"
            // devcontainer is a link I placed to get around the spacing in the name vscode wants.
            // ~/.config/Code\ -\ Insiders/CodeInsiders/User/globalStorage/ms-vscode-remote.remote-containers/cli-bin/devcontainer-insiders build --image-name bhimesbhimes/cistem_build_env .devcontainer_build/
        }
    ]
}